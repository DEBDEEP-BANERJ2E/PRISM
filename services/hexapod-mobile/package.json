{
  "name": "hexapod-mobile",
  "version": "1.0.0",
  "description": "Mobile hexapod robot system with ROS2 navigation and computer vision for cliff-face inspection",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "ros2:build": "colcon build --packages-select hexapod_mobile",
    "ros2:source": "source install/setup.bash"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.13.0",
    "node-cron": "^3.0.2",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",

    "serialport": "^12.0.0",
    "mqtt": "^4.3.7"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.3",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0"
  }
