# PRISM Web Dashboard - Production Environment Variables

# Application Configuration
VITE_APP_NAME=PRISM
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# API Configuration
VITE_API_BASE_URL=https://api.prism-ai.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# WebSocket Configuration
VITE_WS_URL=wss://ws.prism-ai.com
VITE_WS_RECONNECT_INTERVAL=5000

# Authentication
VITE_AUTH_DOMAIN=prism-ai.auth0.com
VITE_AUTH_CLIENT_ID=your_auth0_client_id
VITE_AUTH_AUDIENCE=https://api.prism-ai.com

# Mapbox Configuration
# Get your public token from: https://account.mapbox.com/access-tokens/
# IMPORTANT: Use a PUBLIC token (starts with pk.) NOT a secret token (starts with sk.)
VITE_MAPBOX_ACCESS_TOKEN=pk.eyJ1IjoiZGViZGVlcDM2MTMiLCJhIjoiY21mcjFhZHR5MDQ1djJ2cGFwcXZ5c3Q2dCJ9.BI7OL3g36T_ahIZ8LcRhKQ

# Feature Flags
VITE_ENABLE_3D_VISUALIZATION=true
VITE_ENABLE_REAL_TIME_ALERTS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MOBILE_RESPONSIVE=true

# Monitoring & Analytics
VITE_SENTRY_DSN=your_sentry_dsn
VITE_GOOGLE_ANALYTICS_ID=your_ga_id

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PWA=true

# Debug (set to false in production)
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false