{
  "name": "prism-rockfall-prediction",
  "version": "1.0.0",
  "description": "AI-based rockfall prediction and alert system for open-pit mines",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "test": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "build": "npm run build:services",
    "build:services": "npm run build:data-ingestion && npm run build:digital-twin && npm run build:ai-pipeline && npm run build:alert-management && npm run build:user-management",
    "build:data-ingestion": "cd services/data-ingestion && npm run build",
    "build:digital-twin": "cd services/digital-twin && npm run build",
    "build:ai-pipeline": "cd services/ai-pipeline && npm run build",
    "build:alert-management": "cd services/alert-management && npm run build",
    "build:user-management": "cd services/user-management && npm run build",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "rockfall",
    "prediction",
    "mining",
    "ai",
    "machine-learning",
    "iot",
    "digital-twin"
  ],
  "author": "PRISM Development Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}